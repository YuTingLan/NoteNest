<div class="frame">
    <%= link_to image_tag("add.png"), new_post_path %>
    <hr>
    <div class="grid">
        <% @posts.each do |post| %>
        <section class="card-container" style="background-color:<%= post.color %>">
            <div class="tool-icon">
                <div><h1 class="title"><%= post.title %></h1></div>
                <div>
                    <%= link_to image_tag("edit.png"), edit_post_path(post.id),class: "icon" %>
                    <%= link_to image_tag("delete.png"), post_path(post.id, '#'), 
                                                    class: "icon icon-danger", 
                                                    method: "delete", 
                                                    data: {confirm: "確認刪除?"}%>
                </div>
            </div>
            <section class="box">
                <div class="content"><%= link_to post.content&.truncate(190), '#' %></div>
            </section>
            <footer class="footer">
                <time class="update-time"><%= post.updated_at.strftime("%Y/%m/%d %I:%M") %></time>
                <span><%= post.name %></span>
            </footer>
        </section> 
    <% end %>
    </div>
</div>